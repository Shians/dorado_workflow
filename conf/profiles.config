// Profiles configuration
// Usage: nextflow run main.nf -profile <profile_name>
//
// Available profiles:
//   - singularity: Local or SLURM execution with Singularity containers
//   - slurm_gpu: SLURM cluster with GPU support for basecalling

profiles {
    // Singularity profile for local or SLURM execution
    singularity {
        singularity {
            enabled = true
            autoMounts = true
            runOptions = '--nv'  // Enable NVIDIA GPU support
        }
        cleanup = false
    }

    // SLURM cluster with GPU support for basecalling
    slurm_gpu {
        singularity {
            enabled = true
            autoMounts = true
            runOptions = '--nv'  // Enable NVIDIA GPU support
        }
        process {
            executor = 'slurm'
            memory = '32.GB'
            cpus = 8
            time = '24h'
        }
        cleanup = false
    }
}
