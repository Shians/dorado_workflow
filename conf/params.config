// Pipeline parameters configuration
params {
  help = false

  // Input options
  pod5_sheet = null                // TSV file with sample_id, path columns
  reference_genome = null
  basecall_model = null            // Dorado basecalling model
  output_dir = "output"

  // Control what gets published to output directory
  publish {
    merged_bams = true             // Merged BAM files after basecalling
    fastq = true                   // FASTQ files converted from BAMs
  }
}
